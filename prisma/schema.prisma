// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  fullName String
  email String @unique
  password String
  role Role @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdConcepts Concept[] @relation("createdConcepts")
  purchasedConcepts Concept[] @relation("purchasedConcepts")
}


model Concept{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  thumbnail String
  images String[]
  description String
  style Style
  roomType Room
  userId String @db.ObjectId
  createdBy User @relation("createdConcepts",fields: [userId],references: [id])
  purchasedBy User @relation("purchasedConcepts",fields: [userId],references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  productIds String[] @db.ObjectId
  products Product[] @relation(fields: [productIds],references: [id])
}

model Image{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  fileName String
  url String
  analysis ImageAnalysis?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ImageAnalysis{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  imageId String @unique @db.ObjectId 
  image Image @relation(fields: [imageId], references: [id])
  createdAt DateTime @default(now())
  detectedObjects DetectedObject[]
  updatedAt DateTime @updatedAt
}

model DetectedObject {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  label String
  confidence Float
  imageAnalysisId String @db.ObjectId
  imageAnalysis ImageAnalysis @relation(fields: [imageAnalysisId], references: [id])
  vertices Vertex[]  // if you want to store bounding box information
  associatedProducts Product[]  // relationships to products associated with this detected object
}

model Vertex {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  x Float
  y Float
  detectedObjectId String @db.ObjectId
  object DetectedObject @relation(fields: [detectedObjectId], references: [id])
}

model Product {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  image String
  description String
  category String
  price Int
  url String
  conceptIds String[] @db.ObjectId
  concepts Concept[] @relation(fields: [conceptIds],references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  partnerIds String[] @db.ObjectId
  partners  Partner[] @relation(fields: [partnerIds],references: [id])
  objectId String @db.ObjectId
  detectedObjects DetectedObject @relation(fields: [objectId],references: [id]) 
}

model Partner {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  productIds String[] @db.ObjectId
  products  Product[] @relation(fields: [productIds],references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


enum Role {
  ADMIN
  USER
}

enum Style{
  MINIMALIST
  MODERN
  INDUSTRIAL
  SCANDINAVIAN
  CONTEMPORARY
  MIDCENTURY
  ARTDECO
  TRADITIONAL
  BOHEMIAN
  ELECTIC
}

enum Room{
 KITCHEN
  LIVINGROOM
  BEDROOM
  DININGROOM
  BATHROOM
  OFFICE
  STUDY
  ENTRYWAY
  LIBRARY
  NURSERY
}

